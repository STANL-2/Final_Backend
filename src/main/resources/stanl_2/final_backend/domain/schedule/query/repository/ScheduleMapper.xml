<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stanl_2.final_backend.domain.schedule.query.repository.ScheduleMapper">
    <resultMap id="AllSchedules" type="stanl_2.final_backend.domain.schedule.query.dto.ScheduleDTO">
        <id property="id" column="SCH_ID"/>
        <result property="name" column="SCH_NAME"/>
<!--        <result property="content" column="SCH_CONT"/>-->
        <result property="startAt" column="SCH_SRT_AT"/>
        <result property="endAt" column="SCH_END_AT"/>
<!--        <result property="createdAt" column="CREATED_AT"/>-->
<!--        <result property="updatedAt" column="UPDATED_AT"/>-->
<!--        <result property="deletedAt" column="DELETED_AT"/>-->
        <result property="active" column="ACTIVE"/>
        <result property="memberId" column="MEM_ID"/>
    </resultMap>
    <select id="findSchedulesByMemberIdAndSrtAt" resultMap="AllSchedules" parameterType="hashmap">
        SELECT
               A.SCH_ID,
               A.SCH_NAME,
               A.SCH_SRT_AT,
               A.SCH_END_AT,
               A.ACTIVE,
               A.MEM_ID
          FROM TB_SCHEDULE A
         WHERE MEM_ID = #{ memberId }
           AND SCH_SRT_AT LIKE CONCAT(#{ month },'%')
           AND ACTIVE = TRUE
    </select>

    <resultMap id="yearMonthSchedules" type="stanl_2.final_backend.domain.schedule.query.dto.ScheduleYearMonthDTO">
        <id property="id" column="SCH_ID"/>
        <result property="name" column="SCH_NAME"/>
        <result property="content" column="SCH_CONT"/>
        <result property="startAt" column="SCH_SRT_AT"/>
        <result property="endAt" column="SCH_END_AT"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="deletedAt" column="DELETED_AT"/>
        <result property="active" column="ACTIVE"/>
        <result property="memberId" column="MEM_ID"/>
    </resultMap>
    <select id="findSchedulesByMemberIdAndYearMonth" resultMap="yearMonthSchedules"
            parameterType="stanl_2.final_backend.domain.schedule.query.dto.ScheduleYearMonthDTO">
        SELECT
               A.SCH_ID,
               A.SCH_NAME,
               A.SCH_SRT_AT,
               A.SCH_END_AT,
               A.MEM_ID
         FROM TB_SCHEDULE A
        WHERE A.MEM_ID = #{ memberId }
          AND A.SCH_SRT_AT LIKE CONCAT(#{ yearMonth },'%')
        <!--           AND DATE_FORMAT(A.SCH_SRT_AT, '%Y-%m') = #{ month }-->
          AND A.ACTIVE = TRUE
    </select>

    <resultMap id="detailSchedule" type="stanl_2.final_backend.domain.schedule.query.dto.ScheduleDetailDTO">
        <id property="id" column="SCH_ID"/>
        <result property="name" column="SCH_NAME"/>
        <result property="content" column="SCH_CONT"/>
        <result property="startAt" column="SCH_SRT_AT"/>
        <result property="endAt" column="SCH_END_AT"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="deletedAt" column="DELETED_AT"/>
        <result property="active" column="ACTIVE"/>
        <result property="memberId" column="MEM_ID"/>
    </resultMap>
    <select id="findScheduleByMemberIdAndScheduleId" resultMap="detailSchedule"
            parameterType="stanl_2.final_backend.domain.schedule.query.dto.ScheduleDetailDTO">
        SELECT
            A.SCH_ID,
            A.SCH_NAME,
            A.SCH_CONT,
            A.SCH_SRT_AT,
            A.SCH_END_AT,
            A.MEM_ID
        FROM TB_SCHEDULE A
        WHERE MEM_ID = #{ memberId }
          AND SCH_ID = #{ id }
          AND ACTIVE = TRUE
    </select>
</mapper>