<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stanl_2.final_backend.domain.schedule.query.repository.ScheduleMapper">
    <resultMap id="scheduleInformation" type="stanl_2.final_backend.domain.schedule.query.dto.ScheduleDTO">
        <id property="id" column="SCH_ID"/>
        <result property="name" column="SCH_NAME"/>
        <result property="content" column="SCH_CONT"/>
        <result property="startAt" column="SCH_SRT_AT"/>
        <result property="endAt" column="SCH_END_AT"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="deletedAt" column="DELETED_AT"/>
        <result property="active" column="ACTIVE"/>
        <result property="memberId" column="MEM_ID"/>
    </resultMap>
    <select id="findSchedulesByMemberIdAndSrtAt" resultMap="scheduleInformation" parameterType="hashmap">
        SELECT
               A.SCH_ID,
               A.SCH_NAME,
               A.SCH_CONT,
               A.SCH_SRT_AT,
               A.SCH_END_AT,
               A.CREATED_AT,
               A.UPDATED_AT,
               A.DELETED_AT,
               A.ACTIVE,
               A.MEM_ID
          FROM TB_SCHEDULE A
         WHERE MEM_ID = #{ memberId }
           AND SCH_SRT_AT LIKE CONCAT(#{ month },'%')
           AND ACTIVE = TRUE;
    </select>

    <select id="findSchedulesByMemberIdAndYearMonth" resultMap="scheduleInformation" parameterType="hashmap">
        SELECT
               A.SCH_ID,
               A.SCH_NAME,
               A.SCH_CONT,
               A.SCH_SRT_AT,
               A.SCH_END_AT,
               A.CREATED_AT,
               A.UPDATED_AT,
               A.DELETED_AT,
               A.ACTIVE,
               A.MEM_ID
         FROM TB_SCHEDULE A
        WHERE MEM_ID = #{ memberId }
          AND SCH_SRT_AT LIKE CONCAT(#{ yearMonth },'%')
          AND ACTIVE = TRUE;
    </select>

    <select id="findScheduleByMemberIdAndScheduleId" resultMap="scheduleInformation"
            parameterType="stanl_2.final_backend.domain.schedule.query.dto.ScheduleDTO">
        SELECT
            A.SCH_ID,
            A.SCH_NAME,
            A.SCH_CONT,
            A.SCH_SRT_AT,
            A.SCH_END_AT,
            A.CREATED_AT,
            A.UPDATED_AT,
            A.DELETED_AT,
            A.ACTIVE,
            A.MEM_ID
        FROM TB_SCHEDULE A
        WHERE MEM_ID = #{ memberId }
          AND SCH_ID = #{ id }
          AND ACTIVE = TRUE
    </select>
</mapper>